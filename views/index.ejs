<%- include("partials/header.ejs") %>
  <% if(locals.date){ %>
    <h1 class="mb-5 text-light fw-bolder "><%= date %></h1>
  <% } %>
  <div class="container d-flex justify-content-center">
    <form class="row user-input w-50 shadow" action="/add_task_today" method="POST">
        <input name="newTask" type="text" id="new-task" placeholder="What will you do today?" class="col-8 rounded-start-2">
        <input type="submit" id="submit" class="col-4 text-light rounded-end-2" value="+">
    </form>
  </div>
  
  <div class="container m-5 d-flex justify-content-center">
    <% if(locals.todaysTask){ %>
      <div class="row w-50 shadow">
        <% for (let i = 0; i < todaysTask.length; i++) { %>
          <div class="task col-12 bg-white p-2 border-bottom">
              <input type="checkbox" class="check" data-text-id="<%= i %>">
              <span class="task-text"><%= todaysTask[i] %></span>
          </div>
      <% } %>
      
      </div>
    <% } %>
  </div>
<%- include("partials/footer.ejs") %>